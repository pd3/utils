CC      = gcc
CFLAGS  = -Wall -g -O2 -I ../htslib
LDLIBS  = ../htslib/libhts.a -llzma -lbz2 -lz -lm -lcurl -lcrypto -lcrypt -lpthread
LIBS    = regidx.o

all: $(LIBS)

%.o: %.c
	$(CC) $(CFLAGS) -c $<

clean:
	rm -f *.o *.a *~ version.h


